@page "/listings"
@inject HttpClient Http
<SearchComponent Filter="@_filter"></SearchComponent>
@if (_items.Count() > 0)
{
	<DisplayAllItemsComponent items="@_items" />
}
else
{
	<span>There are no items to show</span>
}

@code {

	private User? _user;
	private List<Item> _items = new();
	private Filter _filter;

	protected async override Task OnInitializedAsync()
	{
		_items = await Http.GetFromJsonAsync<List<Item>>($"https://localhost:7077/api/items/get/all?filter={_filter}");
	}
	
	
}