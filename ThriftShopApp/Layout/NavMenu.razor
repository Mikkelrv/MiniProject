<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
<div class="nav-container">
    <!-- Header -->
    <div class="navbar-header">
        <a class="navbar-brand" href="">ThriftShopApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
    <!-- Navigation Content -->
    <div class="@NavMenuCssClass">
        <!-- Main Navigation Items -->
        <div class="nav-content">
            <div class="nav-items">
                <NavLink class="nav-item" href="myprofile">
                    <i class="bi bi-plus-square me-2"></i>
                    <span>MyProfile</span>
                </NavLink>
                
                <NavLink class="nav-item" href="listings">
                    <i class="bi bi-list-nested me-2"></i>
                    <span>Browse Listings</span>
                </NavLink>
                
                <NavLink class="nav-item" href="mypurchases">
                    <i class="bi bi-house-door me-2"></i>
                    <span>My Purchases</span>
                </NavLink>
            </div>
            <!-- Logout Section -->
            <div class="logout-section">
                @if (!showLogoutDialog)
                {
                    <button @onclick="ShowLogoutDialog" class="nav-item logout">
                        <i class="bi bi-box-arrow-right me-2"></i>
                        <span>Logout</span>
                    </button>
                }
                else
                {
                    <div class="logout-confirm">
                        <p>Are you sure you want to logout?</p>
                        <div class="logout-buttons">
                            <button @onclick="CancelLogout" class="cancel-btn">
                                <i class="bi bi-x-circle me-2"></i>
                                Cancel
                            </button>
                            <button @onclick="HandleLogout" class="confirm-btn">
                                <i class="bi bi-check-circle me-2"></i>
                                Confirm
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .nav-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: #2d2d2d;
        color: white;
    }
    .navbar-header {
        padding: 1rem;
        border-bottom: 1px solid #404040;
    }
    .navbar-brand {
        color: white;
        text-decoration: none;
        font-size: 1.25rem;
    }
    .navbar-toggler {
        display: none;
        background: none;
        border: 1px solid #404040;
        padding: 0.5rem;
        color: white;
    }
    .nav-content {
        display: flex;
        flex-direction: column;
        height: calc(100vh - 4rem);
        padding: 1rem 0;
    }
    .nav-items {
        flex-grow: 1;
    }
    .nav-item {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        color: #d7d7d7;
        text-decoration: none;
        transition: background-color 0.2s;
        width: 100%;
        border: none;
        background: none;
        text-align: left;
        cursor: pointer;
    }
    .nav-item:hover {
        background-color: #404040;
        color: white;
    }
    .nav-item i {
        font-size: 1.1rem;
    }
    .logout {
        border-top: 1px solid #404040;
    }
    .logout:hover {
        background-color: #dc3545;
        color: white;
    }

    /* Logout confirmation styles */
    .logout-section {
        border-top: 1px solid #404040;
    }
    .logout-confirm {
        padding: 1rem;
        background-color: #363636;
    }
    .logout-confirm p {
        margin: 0 0 0.75rem 0;
        color: #d7d7d7;
        font-size: 0.9rem;
    }
    .logout-buttons {
        display: flex;
        gap: 0.5rem;
    }
    .logout-buttons button {
        flex: 1;
        padding: 0.5rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.2s;
    }
    .cancel-btn {
        background-color: #4a4a4a;
        color: #d7d7d7;
    }
    .cancel-btn:hover {
        background-color: #5a5a5a;
    }
    .confirm-btn {
        background-color: #dc3545;
        color: white;
    }
    .confirm-btn:hover {
        background-color: #c82333;
    }

    
</style>

@code {
    private bool collapseNavMenu = true;
    private bool showLogoutDialog = false;
    
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private void ShowLogoutDialog()
    {
        showLogoutDialog = true;
    }
    
    private void CancelLogout()
    {
        showLogoutDialog = false;
    }
    
    private void HandleLogout()
    {
        // Reset both states
        showLogoutDialog = false;
        collapseNavMenu = true;
        
        // Navigate to logout
        NavigationManager.NavigateTo("logout");
    }
    
    [Inject]
    private NavigationManager NavigationManager { get; set; }
}